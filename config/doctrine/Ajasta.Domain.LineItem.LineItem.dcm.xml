<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
    http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Ajasta\Domain\LineItem\LineItem">
        <id name="lineItemId" type="Ajasta.LineItem.LineItemId"/>

        <field name="description" type="Ajasta.Descriptor"/>
        <field name="quantity" type="Ajasta.LineItem.Quantity"/>
        <field name="unit" type="Ajasta.Unit"/>
        <field name="unitPrice" type="Ajasta.Price"/>
    </entity>
</doctrine-mapping>
