<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
    xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
    http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Application\Entity\Option" table="option">
        <id name="path" type="string"/>

        <field name="type" type="string"/>
        <field name="stringValue" type="string"/>
        <field name="integerValue" type="integer"/>
        <field name="decimalValue" type="decimal" precision="19" scale="4"/>
    </entity>
</doctrine-mapping>
